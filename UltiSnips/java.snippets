priority -50

global !p
def camelCase(word):
	if not word: return ''
	return word[0].upper() + word[1:]

def mixedCase(word):
	if not word: return ''
	return word[0].lower() + word[1:]

def upperCase(word):
	if not word: return ''
	return word.upper()

endglobal

snippet col "JPA Column"
private ${1:String} ${2:Name};`!p snip.rv += "\n"`
